<% include ../layout/header%>
<% include ../layout/menu%>

<script>
    $("#navhome").removeClass("active");
    $("#navprodutos").removeClass("active");
    $("#navclientes").addClass("active");
    $("#navvendas").removeClass("active");
</script>

<div class="container">
  <h3>Editar Cliente</h3>
  <div class="panel panel-default" style="height:600px; background: #ddddddcc">

    <%if(validacao.length>0){%>
    <div class="alert alert-danger" id="validacaoCadastroCliente">
      <strong>Atenção!</strong>
      <ul>
        <% for(var i=0; i < validacao.length; i++){ %>
        <li>
          <%=validacao[i].msg%>
        </li>
        <% } %>

      </ul>
    </div>

    <% }%>


    <%if(adicionado.bool == 1){%>
      <div class="alert alert-success" id="sucessoAdd">
          <strong><%=adicionado.msg %></strong>
      </div>
    <% }%>

    <form action="/clientes/<%= id %>" method="post" class="clientes" name="form-cliente-edit">
      <div class="form-group">
        <label for="idcliente">Código do Cliente</label>
        <label class="form-control" id="idCliente" name="idCliente"><%= id %></label>
      </div>
      <div class="form-group">
        <label for="nomeCliente">Cliente</label>
        <input type="text" autofocus class="form-control" id="nomeCliente" name="nomeCliente" placeholder="Nome do cliente" value="<%= nome %>">
      </div>

      <button type="submit" class="btn btn-primary">Salvar</button>
      <a href="/clientes"><button type="button" class="btn btn-primary">Voltar</button></a>
      <a href="/clientes"><button type="button" class="btn btn-primary">Cancelar</button></a>
      
      <input type="hidden" name="_method" value="PUT" />
    </form>
  </div>
</div>
<% include ../layout/footer%>